---
import TechCarousel from "./TechCarousel.astro";
---

<section
    id="home"
    class="relative min-h-screen flex items-center pt-32 pb-20 overflow-hidden"
>
    <!-- Background Effects (CSS only, lightweight) -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div
            class="absolute top-[-10%] right-[-5%] w-[500px] h-[500px] bg-accent-primary/20 rounded-full blur-[120px] animate-pulse-slow"
        >
        </div>
        <div
            class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-accent-secondary/20 rounded-full blur-[100px] animate-pulse-slow delay-1000"
        >
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10 w-full">
        <!-- Layout: Mobile Column Reverse, Desktop Grid with biased columns (7:5 ratio approx) -->
        <div
            class="flex flex-col-reverse lg:grid lg:grid-cols-12 gap-12 items-center"
        >
            <!-- Left Column: Copy (Span 7/12 for wider text area) -->
            <div
                class="flex flex-col text-center lg:text-left items-center lg:items-start space-y-8 lg:col-span-7"
            >
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass-card animate-float border border-accent-primary/30 shadow-[0_0_20px_rgba(99,102,241,0.2)]"
                >
                    <span class="relative flex h-2.5 w-2.5">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-success opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2.5 w-2.5 bg-accent-success"
                        ></span>
                    </span>
                    <span
                        class="text-xs font-semibold text-accent-tertiary tracking-wide uppercase"
                        >Disponível para projetos & consultorias</span
                    >
                </div>

                <!-- Typography: Reduced from 80px to 6xl/7xl for better balance -->
                <h1
                    class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-[1.1] text-white"
                >
                    Software Engineer <br />
                    <span class="text-gradient-accent relative inline-block">
                        & AI Specialist
                        <div
                            class="absolute inset-0 blur-xl bg-accent-primary/20 -z-10"
                        >
                        </div>
                    </span>
                </h1>

                <p
                    class="text-lg md:text-xl text-text-secondary max-w-2xl leading-relaxed font-light"
                >
                    Transformo ideias em <strong class="text-white"
                        >produtos escaláveis</strong
                    > usando IA, automação e as melhores práticas de engenharia. De
                    sistemas enterprise a SaaS inovadores.
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center gap-5 w-full sm:w-auto"
                >
                    <a
                        href="https://www.linkedin.com/in/gabrielrabelob/"
                        target="_blank"
                        class="w-full sm:w-auto px-8 py-4 bg-white text-bg-main font-bold text-base rounded-full shadow-[0_0_40px_rgba(255,255,255,0.3)] hover:shadow-[0_0_60px_rgba(255,255,255,0.5)] hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-2 group relative overflow-hidden"
                    >
                        <span class="relative z-10 text-bg-main"
                            >Ver LinkedIn</span
                        >
                        <i
                            data-lucide="arrow-right"
                            class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform text-bg-main"
                        ></i>
                    </a>
                    <a
                        href="#contato"
                        class="w-full sm:w-auto px-8 py-4 glass-card rounded-full text-white font-medium text-base hover:bg-white/10 transition-all duration-300 flex items-center justify-center gap-2 border border-white/20"
                    >
                        <i
                            data-lucide="message-circle"
                            class="w-5 h-5 text-accent-tertiary"></i>
                        Fale Comigo
                    </a>
                </div>
            </div>

            <!-- Right Column: Hero WebP Animado (Span 5/12) -->
            <div
                class="relative w-full max-w-[500px] lg:max-w-full flex justify-center lg:justify-end lg:col-span-5"
            >
                <div
                    class="relative group w-full flex justify-center lg:justify-end"
                >
                    <!-- Glow Effect Background - Subtle backdrop for transparency -->
                    <div
                        class="absolute -inset-10 bg-accent-primary/20 blur-[80px] rounded-full animate-pulse-slow pointer-events-none"
                    >
                    </div>

                    <!-- Floating Animation Container -->
                    <div
                        class="relative animate-float-slow z-10 w-full flex justify-center lg:justify-end"
                    >
                        <div
                            class="relative w-full aspect-[4/5] flex items-end justify-center lg:justify-end"
                        >
                            <!-- WebP Animado com Fallback Estático -->
                            <picture class="w-full h-full">
                                <!-- WebP Animado (9.73 MB) - Navegadores modernos -->
                                <source 
                                    srcset="/img/hero-final.webp" 
                                    type="image/webp"
                                >
                                <!-- PNG Estático - Fallback leve para navegadores sem suporte WebP -->
                                <img
                                    src="/img/eu-no-bg.png"
                                    alt="Gabriel Rabelo - Software Engineer & AI Specialist"
                                    class="w-full h-full object-contain object-bottom drop-shadow-2xl"
                                    width="600"
                                    height="750"
                                    loading="eager"
                                    decoding="async"
                                />
                            </picture>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-20">
            <TechCarousel />
        </div>
    </div>
</section>

<style>
    @keyframes float-slow {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }
    .animate-float-slow {
        animation: float-slow 6s ease-in-out infinite;
    }
    .animate-pulse-slow {
        animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    /* Irresistible Glow Effect on Container */
    .hero-image-container {
        box-shadow:
            0 0 40px rgba(79, 70, 229, 0.15),
            0 20px 40px rgba(0, 0, 0, 0.4);
        transition: box-shadow 0.5s ease;
    }
    .hero-image-container:hover {
        box-shadow:
            0 0 60px rgba(79, 70, 229, 0.25),
            0 30px 60px rgba(0, 0, 0, 0.5);
    }
</style>

<script is:inline>
    if (typeof lucide !== "undefined") {
        lucide.createIcons();
    }
</script>
