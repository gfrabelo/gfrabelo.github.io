---
const logos = [
  { src: '/img/html.png', alt: 'HTML5', name: 'HTML5' },
  { src: '/img/js.png', alt: 'JavaScript', name: 'JavaScript' },
  { src: '/img/Angular_gradient.png', alt: 'Angular', name: 'Angular' },
  { src: '/img/sass.png', alt: 'Sass', name: 'Sass' },
  { src: '/img/physics.png', alt: 'React', name: 'React' },
  { src: '/img/node-js.png', alt: 'Node.js', name: 'Node.js' },
  { src: '/img/python.png', alt: 'Python', name: 'Python' },
  { src: '/img/github.png', alt: 'GitHub', name: 'GitHub' },
  { src: '/img/figma.png', alt: 'Figma', name: 'Figma' },
  { src: '/img/n8n-logo.png', alt: 'n8n', name: 'n8n' },
  { src: '/img/claude.png', alt: 'Claude AI', name: 'Claude AI' },
  { src: '/img/gemini.png', alt: 'Google Gemini', name: 'Google Gemini' },
  { src: '/img/chatgpt.png', alt: 'ChatGPT', name: 'ChatGPT' },
  { src: '/img/docker.png', alt: 'Docker', name: 'Docker' },
  { src: '/img/supabase.png', alt: 'Supabase', name: 'Supabase' },
];
---

<div class="w-full max-w-6xl">
    <p class="text-xs text-text-muted mb-8 font-mono uppercase tracking-widest text-center">Stack Completo</p>
    
    <div class="tech-carousel-wrapper-hero relative">
        <div class="tech-carousel-hero flex gap-10 items-center">
            {logos.map((logo) => (
                <div class="tech-logo-item-hero flex-shrink-0 group relative">
                    <img 
                        src={logo.src} 
                        alt={logo.alt} 
                        title={logo.name}
                        class="w-14 h-14 md:w-16 md:h-16 object-contain transition-all duration-300 group-hover:scale-110 group-hover:drop-shadow-[0_0_8px_rgba(255,255,255,0.5)]" 
                    />
                    <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 text-xs text-white bg-black/80 px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
                        {logo.name}
                    </span>
                </div>
            ))}
            {logos.map((logo) => (
                <div class="tech-logo-item-hero flex-shrink-0 group relative">
                    <img 
                        src={logo.src} 
                        alt={logo.alt} 
                        title={logo.name}
                        class="w-14 h-14 md:w-16 md:h-16 object-contain transition-all duration-300 group-hover:scale-110 group-hover:drop-shadow-[0_0_8px_rgba(255,255,255,0.5)]" 
                    />
                    <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 text-xs text-white bg-black/80 px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
                        {logo.name}
                    </span>
                </div>
            ))}
        </div>
    </div>
</div>
